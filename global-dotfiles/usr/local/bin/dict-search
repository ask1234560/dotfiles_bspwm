#!/bin/bash
cache="/home/ananthu/.cache/dict-output"

while true
do
    if [ "$#" -eq 1 ]
    then
        word=$1
    else
        echo -e "\nSearch dictionary..."
        read word
    fi
    if grep -q "^$word" $cache
    then
        sed -n "/^$word/,/-----/p" $cache | tail -n+2 | head -n-1
        [ "$#" -eq 1 ] && exit 0
    else
        result=$(/home/ananthu/.config/scripts/dict-search.py $word)
        exit_code=$?
        if [ "$exit_code" -eq 0 ]
        then
            echo "$word" >> $cache
            echo "$result" | tee -a $cache
            echo -e "-----\n" >> $cache 
            [ "$#" -eq 1 ] && exit 0
        else
            echo "Searching in Google!"
            # for multiple words separate with '+'
            brave "https://www.google.com/search?q=$word+means" &> /dev/null
            [ "$#" -eq 1 ] && exit 1
        fi
    fi
done
