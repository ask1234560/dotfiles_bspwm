# xdg
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"

export BROWSER="brave"
export EDITOR="nvim"
export MAILTO="ask1234560@gmail.com"
export PAGER="less"
export TERMINAL="alacritty"
export VISUAL="nvim"

# qt5 theme conf
export QT_QPA_PLATFORMTHEME="qt5ct"

# less hist file
export LESSHISTFILE="$XDG_CACHE_HOME/.lesshst"
# Start blinking
export LESS_TERMCAP_mb=$(tput bold; tput setaf 2) # green
# Start bold
export LESS_TERMCAP_md=$(tput bold; tput setaf 2) # green
# Start stand out
export LESS_TERMCAP_so=$(tput bold; tput setaf 3) # yellow
# End standout
export LESS_TERMCAP_se=$(tput rmso; tput sgr0)
# Start underline
export LESS_TERMCAP_us=$(tput smul; tput bold; tput setaf 1) # red
# End Underline
export LESS_TERMCAP_ue=$(tput sgr0)
# End bold, blinking, standout, underline
export LESS_TERMCAP_me=$(tput sgr0)
export GROFF_NO_SGR=1

# sudo -A
export SUDO_ASKPASS="/usr/local/bin/dpass"

# ranger use only user rc.conf
export RANGER_LOAD_DEFAULT_RC="FALSE"

# weechat irc
export WEECHAT_HOME="$XDG_CONFIG_HOME/weechat"

# simplenote
export SNCLIRC="$XDG_CONFIG_HOME/simplenote/config"

# pass
export PASSWORD_STORE_DIR="$XDG_DATA_HOME/pass"

# npm
export NPM_CONFIG_USERCONFIG="$XDG_CONFIG_HOME/npm/npmrc"

# notmuch
export NOTMUCH_CONFIG="$XDG_CONFIG_HOME/notmuch/notmuchrc"
export NMBGIT="$XDG_DATA_HOME/notmuch/nmbug"

# pfetch
export PF_INFO="ascii os wm pkgs memory uptime palette"

# zsh
# z
export _Z_DATA="$XDG_DATA_HOME/z"
export _Z_SRC="/usr/share/z/z.sh"

# aspell
export ASPELL_CONF="per-conf $XDG_CONFIG_HOME/aspell/aspell.conf; personal $XDG_CONFIG_HOME/aspell/en.pws; repl $XDG_CONFIG_HOME/aspell/en.prepl"

# gdb
export GDBHISTFILE="$XDG_DATA_HOME/gdb/.gdb_history"

# rust
export CARGO_HOME="$XDG_DATA_HOME/cargo"
export RUSTUP_HOME="$XDG_DATA_HOME/rustup"
export CARGO_BUILD_JOBS=1

# java
export _JAVA_AWT_WM_NONREPARENTING=1

# make
export MAKEFLAGS="-j1"

export GNUPGHOME="$XDG_DATA_HOME/gnupg"
export GTK2_RC_FILES="$XDG_CONFIG_HOME/gtk-2.0/gtkrc"
export IPYTHONDIR="$XDG_CONFIG_HOME/ipython"
export MBSYNCRC="$XDG_CONFIG_HOME/isync/mbsyncrc"
export XINITRC="$XDG_CONFIG_HOME/X11/xinitrc"
